    {% for estado in estados if estado.mostrar %}            
    <div class="row proveedores" id="estado-{{estado.id}}" style="display:none;">
         <table role="presentation" class="table table-striped">
            <thead>
                <tr>
                    <th>Estado</th>
                    <th>Ciudad</th>
                    <th>Establecimiento</th>
                    <th>Tipologia</th>
                    <th>Direccion</th>
                    <th>CP</th>
                    <th>Telefonos</th>
                </tr>
            </thead>
            <tbody class="files">
                {% for establecimiento in establecimientos if establecimiento.estado == estado.nombre %}
                <tr class="template-download fade in" id="establecimiento-{{establecimiento.id}}">
                    <td>{{establecimiento.estado}}</td>
                    <td>{{establecimiento.ciudad}}</td>
                    <td>{{establecimiento.nombre}}</td>
                    <td>{{establecimiento.tipologia}}</td>
                    <td>{{establecimiento.direccion}}</td>
                    <td>{{establecimiento.cp}}</td>
                    <td>{{establecimiento.telefonos}}</td>
                </tr>
                {% endfor %}
